{{#if updatePostForm}}
  <form>
    <div class="form-group">
      <label for="question">Update Question:</label>
      {{input value=question.question id="question"}}
    </div>
    <div class="form-group">
      <label for="author">Update Author:</label>
      {{input value=question.author id="author"}}
    </div>
    <div class="form-group">
      <label for="details">Update Details:</label>
      {{input value=question.details id="details"}}
    </div>
    <button {{action 'updateQuestion' question}}>Save</button>
  </form>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
