<form>
  <div class="form-group">
    <label for="question">New Question:</label>
    {{input value=question id="question"}}
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="details">Details:</label>
    {{input value=details id="details"}}
  </div>
  <button {{action 'newQuestion'}}>Add</button>
</form>
